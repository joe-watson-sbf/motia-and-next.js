{
  "name": "motia-next",
  "version": "1.0.0",
  "description": "Demo app using Motia with Next.js",
  "license": "ISC",
  "author": "Joseph Watzson",
  "private": true,
  "workspaces": [
    "front",
    "motia"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter front dev\" \"pnpm --filter motia dev\"",
    "dev:front": "pnpm --filter front dev",
    "dev:motia": "pnpm --filter motia dev",
    "start": "concurrently \"pnpm --filter front start\" \"pnpm --filter motia start\"",
    "start:front": "pnpm --filter front start",
    "start:motia": "pnpm --filter motia start",
    "build": "pnpm -r build",
    "build:front": "pnpm --filter front build",
    "build:motia": "pnpm --filter motia build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}